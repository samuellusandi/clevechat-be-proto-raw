{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
